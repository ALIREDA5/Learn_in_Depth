 /*
 * print a string in reverse using a pointer.c
 *
 *  Created on: Jul 12, 2023
 *      Author: Ali Reda
 */


#include "stdio.h"
#include "stdlib.h"
#include "conio.h"
#include "string.h"

int main(void)
{
   char str[]="ali reda";
   char *ptr = str;
   int len = strlen(str);
   int i;
   for(i=len-1 ; i>=0 ; i--){
	   printf("%c", *(ptr+i));
   }
    return 0;
}
 